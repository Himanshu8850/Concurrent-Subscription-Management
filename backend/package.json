{
  "name": "cstl-stripe-clone-backend",
  "version": "1.0.0",
  "description": "cstl-stripe-clone: Subscription backend with atomic seat reservation",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "seed": "node scripts/seed_db.js",
    "reset": "node scripts/reset_db.js",
    "test:concurrency": "node scripts/concurrency_test.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"scripts/**/*.js\"",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "keywords": [
    "subscription",
    "mongodb",
    "idempotency",
    "concurrency"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bullmq": "^5.1.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.3",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {}
  }
}
